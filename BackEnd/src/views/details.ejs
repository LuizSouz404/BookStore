<!DOCTYPE html>
<html lang="en">
  <head>
    <link rel="shortcut icon" href="/favicon.svg" type="image/svg">
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    
    <title>Livro Livre | <%= books[0].title %></title>
  
    <!-- Font -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Open+Sans&family=Poppins:wght@500;700&display=swap" rel="stylesheet">
    
    <!-- CSS -->

    <link rel="stylesheet" href="/styles/global.css">
    <link rel="stylesheet" href="/styles/details.css">
    <link rel="stylesheet" href="/styles/modal.css">
    <link rel="stylesheet" href="/styles/category.css">
    
    <!-- SCRIPTS -->
    <script src="/scripts/main.js" defer type="module"></script>
  </head>
  <body>
    <div class="content" id="home">
      <header>
        <a href="/">
          <img class="logo" src="/images/Logo.svg" alt="Livro Livre" >
        </a>

        <!-- Search Input -->
        <form action="/book" method="GET" >
          <div class="search-input">
            <input id="search" type="text">
            <img onclick="submit()" src="/images/search.svg" alt="Pesquisar">
          </div>
        </form>

        <a href="#" class="request">
          <img src="/images/book-medical.svg" alt="Requisitar Livro">
          <strong>Requisitar livro</strong>
        </a>
      </header>
  
      <main>
        <section class="book-details">
          <% books.forEach(book => { %>
          <img src="/images/<%= book.id %>.jpg" alt="livro-6">
          <div class="details">
              <strong><%= book.title %></strong>
              <span><%= book.author %></span>

              <p><%= book.synopsis %></p>

              <div class="container-buttons ">
                <a class="button-details" href="#LerOnline">
                  <img src="/images/Vector.svg" alt="Read">
                  Ler Online
                </a>
                <a class="button-details" href="#Reviews">
                  <img src="/images/message-3-line 1.svg" alt="Reviews">
                  Reviews
                </a>
              </div>
              <a href="<%= book.url %>" class="download-button">Download</a>
            </div>
            <% }); %>
        </section>

        <section class="other-book">
          <h2>Mesmo autor</h2>
          <div class="carousel">
          <% sameAuthor.forEach(author => { %>
            <a href="/book/<%= author.id %> ">
              <div class="book">
                <img src="/images/<%= author.id %>.jpg" alt="<%= author.title %>">
              </div>
            </a>
          <% }) %>
          </div>
        </section>
      </main>
  
      <div class="side-bar">
        <h2>Categorias</h2>
        <ul>
          <% categories.forEach(category => { %>
            <li><a href="/category/<%= category.description %>"><%= category.description %></a></li>
          <% }) %>
        </ul>
      </div>
    </div>

    <!-- MODAL -->
    <div class="modal-wrapper">
      <div class="modal">
        <h2>Requisitar Livro</h2>
        <p>
          Não temos disponivel o livro que você quer?
Envie uma requisição que disponibilizarem o mais rapido possivel
        </p>

        <form action="/request" method="POST">
          <input type="text" name="title" placeholder="Nome do Livro">
          <input type="text" name="author" placeholder="Autor do Livro">

          <div class="buttons">
            <div class="button grey cancel">Cancelar</div>
            <button class="blue">Enviar</button>
          </div>
        </form>
      </div>
    </div>

    <!-- Button Responsive -->
    <div class="btn-responsive">
      <div class="btn">
        <img src="/images/list.svg" alt="C">
      </div>
    </div>


    <!-- Category Responsive -->

    <div class="category-wrapper">
      <div class="category">
        <h2>Categorias</h2>
        <ul>
          <% categories.forEach(category => { %>
            <li><a href="/category/<%= category.description %>"><%= category.description.replace('-', ' ') %></a></li>
          <% }) %>
        </ul>
      </div>
    </div>

  </body>
</html>